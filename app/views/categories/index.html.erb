<div class="row">
  <div class="col-12">
    <h1>Categor√≠as</h1>
    <div class="row mt-4">
      <%= render_categories_or_empty(@categories) do %>
        <% @categories.each do |category| %>
          <div class="col-md-6 col-lg-4 mb-4">
            <%= link_to availabilities_category_path(category), class: "text-decoration-none" do %>
              <div class="card h-100 <%= hover_shadow_classes %>">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-3">
                    <%= category_color_circle(category) %>
                    <h5 class="card-title mb-0"><%= category.name %></h5>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      <%= category_availability_count(category) %>
                    </small>
                    <span class="badge bg-primary">Ver detalles</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<style>
  .hover-shadow {
    transition: box-shadow 0.3s;
  }
  .hover-shadow:hover {
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
  }
</style>
