<div class="container-sm w-25">
  <h2><%= t('.title') %></h2>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.input :password, 
                label: t('.new_password'),
                hint: (t('.password_hint', minimum: @minimum_password_length) if @minimum_password_length),
                input_html: { autofocus: true, autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, 
                label: t('.password_confirmation'),
                input_html: { autocomplete: "new-password" } %>
    <div class="actions">
      <%= f.button :submit, t('.submit'), class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
