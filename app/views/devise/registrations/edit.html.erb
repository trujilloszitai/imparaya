<div class="container-sm w-50">
  <h2><%= t('.title') %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, 
                label: t('.email'),
                input_html: { autofocus: true, autocomplete: "email" } %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-info"><%= t('.waiting_confirmation', email: resource.unconfirmed_email) %></div>
    <% end %>
    <%= f.input :password, 
                label: t('.password'),
                hint: t('.password_hint', minimum: @minimum_password_length),
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, 
                label: t('.password_confirmation'),
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, 
                label: t('.current_password'),
                hint: t('.current_password_hint'),
                required: true,
                input_html: { autocomplete: "current-password" } %>
    <div class="actions">
      <%= f.button :submit, t('.submit'), class: "btn btn-primary" %>
    </div>
  <% end %>
  <h3><%= t('.cancel_account_title') %></h3>
  <div><%= t('.unhappy') %> <%= button_to t('.cancel_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-danger" %></div>
  <%= link_to t('.back'), :back, class: "btn btn-link" %>
</div>
