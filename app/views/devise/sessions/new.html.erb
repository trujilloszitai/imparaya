<div class="container-sm w-25">
  <h2><%= t('.title') %></h2>
  <%= simple_form_for(resource, as:resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email, label: t('.email'), input_html: { autofocus:true } %>
    <%= f.input :password, label: t('.password') %>
    <% if devise_mapping.rememberable? %>
      <%= f.input :remember_me, as: :boolean, label: t('.remember_me') %>
    <% end %>
    <div>
      <%= f.button :submit, t('.sign_in'), class:"btn-primary"%>
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>