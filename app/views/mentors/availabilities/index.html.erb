<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>
        Mis Horarios
        <%= link_to "Nuevo Horario", new_mentors_availability_path, class: "btn btn-primary" %>
      </h1>
    </div>
    <div class="d-flex">
      <div class="card-body d-flex justify-content-center calendar-container">
        <%= render_availabilities_or_empty(@availabilities, 
            empty_message: "No tienes horarios disponibles. #{link_to 'Crea el primero', new_mentors_availability_path, class: 'alert-link'}".html_safe) do %>
          <%= render "shared/availabilities/availabilities_calendar", availabilities: @availabilities %>
        <% end %>
      </div>
    </div>
  </div>
</div>
