<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Mentores Disponibles</h1>
    </div>
    <div class="row">
      <%= render_mentors_or_empty(@mentors) do %>
        <% @mentors.each do |mentor| %>
          <div class="col-md-6 col-lg-4 mb-4">
            <%= link_to mentor_path(mentor), class: "text-decoration-none" do %>
              <div class="card h-100 <%= hover_shadow_classes %>">
                <div class="card-body">
                  <h5 class="card-title"><%= mentor.full_name %></h5>
                  <p class="card-text text-muted">
                    <%= truncate_biography(mentor.biography) %>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      <%= mentor_availability_count(mentor) %>
                    </small>
                    <span class="badge bg-primary">Ver perfil</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<style>
  .hover-shadow {
    transition: box-shadow 0.3s;
  }
  .hover-shadow:hover {
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
  }
</style>
